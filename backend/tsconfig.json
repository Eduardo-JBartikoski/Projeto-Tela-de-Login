{
  "compilerOptions": {
    // Estrutura de arquivos
    "rootDir": "./",
    "outDir": "./dist",

    // Ambiente
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["esnext"],
    "types": ["node"],

    // Sa√≠das
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Tipagem
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
